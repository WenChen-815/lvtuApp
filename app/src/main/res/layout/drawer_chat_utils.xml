<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_chat_utils"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/drawer_chat_utils_image_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:background="@drawable/blue_round_button"
            android:padding="10dp"
            android:layout_margin="6dp"

            android:src="@drawable/tutu24"/>
        <ImageView
            android:id="@+id/drawer_chat_utils_image_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:background="@drawable/blue_round_button"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:src="@drawable/tutu24"/>
        <ImageView
            android:id="@+id/drawer_chat_utils_image_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:background="@drawable/blue_round_button"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:src="@drawable/tutu24"/>
        <ImageView
            android:id="@+id/drawer_chat_utils_image_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:background="@drawable/blue_round_button"
            android:padding="10dp"
            android:layout_margin="6dp"
            android:src="@drawable/tutu24"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>